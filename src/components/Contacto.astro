<section id="contacto" class="section dark">
  <div class="container">
    <h2 class="section-title fade-in-scroll">Contacto</h2>
    <p class="contact-intro fade-in-scroll">
      ¿Tienes un proyecto en mente? ¡Hablemos!
    </p>

    <div class="contact-layout">
      <!-- IZQUIERDA: FORMULARIO -->
      <form id="contact-form" class="contact-form fade-in-scroll">
        <fieldset class="form-group">
          <legend>Nombre</legend>
          <input type="text" name="nombre" placeholder="Tu nombre completo" required />
        </fieldset>

        <fieldset class="form-group">
          <legend>Email</legend>
          <input type="email" name="email" placeholder="tuemail@ejemplo.com" required />
        </fieldset>

        <fieldset class="form-group">
          <legend>Asunto</legend>
          <input type="text" name="asunto" placeholder="Motivo del mensaje" required />
        </fieldset>

        <fieldset class="form-group">
          <legend>Mensaje</legend>
          <textarea name="mensaje" rows="5" placeholder="Cuéntame sobre tu proyecto..." required></textarea>
        </fieldset>

        <button type="submit" class="submit-button">
          <span class="button-text">Enviar Mensaje</span>
          <span class="button-loader" style="display:none">Enviando...</span>
        </button>

        <div id="form-message" class="form-message"></div>
      </form>

      <!-- DERECHA: TEXTO + REDES -->
      <div class="contact-info fade-in-scroll">
        <div class="connect-text">
          <h3>Conectemos</h3>
          <p>
            Estoy disponible para proyectos freelance, colaboraciones o simplemente
            para conversar sobre desarrollo web y tecnología.
          </p>
        </div>

        <div class="social-links">
          {redes.map(red => (
            <a href={red.url} class="social-link" target="_blank" rel="noopener">
              <span class="icon" set:html={red.icono}></span>
              <div class="social-text">
                <span class="social-name">{red.nombre}</span>
                <span class="social-detail">{red.detalle}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement | null;
  const formMessage = document.getElementById('form-message') as HTMLDivElement | null;
  const buttonText = document.querySelector('.button-text') as HTMLSpanElement | null;
  const buttonLoader = document.querySelector('.button-loader') as HTMLSpanElement | null;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!form || !formMessage || !buttonText || !buttonLoader) return;
    
    const formData = new FormData(form);
    const data = {
      nombre: formData.get('nombre'),
      email: formData.get('email'),
      asunto: formData.get('asunto'),
      mensaje: formData.get('mensaje')
    };

    buttonText.style.display = 'none';
    buttonLoader.style.display = 'inline';
    formMessage.textContent = '';
    formMessage.className = 'form-message';

    if (!data.nombre || !data.email || !data.asunto || !data.mensaje) {
      formMessage.textContent = 'Por favor completa todos los campos.';
      formMessage.classList.add('error');
      autoHideMessage();
      return;
    }

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(String(data.email))) {
      formMessage.textContent = 'Por favor ingresa un correo válido.';
      formMessage.classList.add('error');
      autoHideMessage();
      return;
    }

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (response.ok) {
        formMessage.textContent = '¡Mensaje enviado con éxito! Te contactaré pronto.';
        formMessage.classList.add('success');
        autoHideMessage();
        form.reset();
      } else {
        formMessage.textContent = result.message || 'Hubo un error al enviar el mensaje.';
        formMessage.classList.add('error');
        autoHideMessage();
      }
    } catch (error) {
      formMessage.textContent = 'Error de conexión. Por favor, intenta de nuevo.';
      formMessage.classList.add('error');
      autoHideMessage();
    } finally {
      buttonText.style.display = 'inline';
      buttonLoader.style.display = 'none';
    }
  });

  function autoHideMessage() {
    setTimeout(() => {
      if (formMessage) {
        formMessage.textContent = '';
        formMessage.className = 'form-message';
      }
    }, 4000);
  }
</script>

