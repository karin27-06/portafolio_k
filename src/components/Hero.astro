<section id="inicio" class="hero">
  <div class="hero-content fade-in">
    <div class="profile-container">
      <div class="profile-image float-animation">
        <div class="profile-flip">
          <div class="profile-front">
            <img src="/images/perfil.png" alt="Karin Hair Chozo Santamaria" />
          </div>
          <div class="profile-back">
            <img src="/images/karin.gif" alt="Karin saludando" />
          </div>
        </div>
      </div>
    </div>
    <h1 class="slide-up">Karin Santamaria</h1>
    <h2 class="slide-up delay-1">Desarrollador Full Stack</h2>
    <p class="tagline slide-up delay-2">
      Creando experiencias web modernas y funcionales
    </p>
    <a href="#contacto" class="cta-button slide-up delay-3">Contáctame</a>
  </div>
</section>

<script>
  const profileFlip = document.querySelector('.profile-flip');
  
  profileFlip?.addEventListener('click', () => {
    profileFlip.classList.toggle('flipped');
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  @keyframes pulseRing {
    0% {
      transform: scale(1);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
    100% {
      transform: scale(1);
      opacity: 0.6;
    }
  }

  .fade-in {
    animation: fadeIn 1s ease-out;
  }

  .slide-up {
    animation: slideUp 0.8s ease-out;
  }

  .slide-up.delay-1 {
    animation-delay: 0.2s;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .slide-up.delay-2 {
    animation-delay: 0.4s;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .slide-up.delay-3 {
    animation-delay: 0.6s;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .float-animation {
    animation: float 3s ease-in-out infinite;
  }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .hero-content {
    max-width: 800px;
  }

  .profile-container {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto 2rem;
  }

  /* Anillo animado detrás de la imagen */
  .profile-container::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    opacity: 0.6;
    animation: pulseRing 2s ease-in-out infinite;
    z-index: -1;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    cursor: pointer;
    perspective: 1000px;
  }

  .profile-flip {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.8s cubic-bezier(0.4, 0.2, 0.2, 1);
  }

  .profile-flip.flipped {
    transform: rotateY(180deg);
  }

  .profile-front,
  .profile-back {
    width: 100%;
    height: 100%;
    position: absolute;
    backface-visibility: hidden;
    border-radius: 50%;
    overflow: hidden;
    border: 5px solid white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .profile-back {
    transform: rotateY(180deg);
  }

  .profile-front img,
  .profile-back img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Efecto hover */
  .profile-image:hover .profile-flip:not(.flipped) {
    transform: scale(1.05);
  }

  /* Indicador visual de que es clickeable */
  .profile-image::after {
    position: absolute;
    bottom: -5px;
    right: -5px;
    background: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    animation: float 2s ease-in-out infinite;
    pointer-events: none;
  }

  body.dark-mode .profile-image::after {
    background: #1e293b;
  }

  h1 {
    font-size: 3.5rem;
    color: #1e293b;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  body.dark-mode h1 {
    color: #f8fafc;
  }

  h2 {
    font-size: 1.8rem;
    color: #334155;
    font-weight: 400;
  }

  .tagline {
    font-size: 1.2rem;
    color: #475569;
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  body.dark-mode h2 {
    color: rgba(255, 255, 255, 0.9);
  }

  body.dark-mode .tagline {
    color: rgba(255, 255, 255, 0.8);
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: white;
    color: #667eea;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }

  body.dark-mode .profile-front,
  body.dark-mode .profile-back {
    border-color: #1e293b;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    
    .profile-container,
    .profile-image {
      width: 150px;
      height: 150px;
    }
    
    .profile-image::after {
      width: 35px;
      height: 35px;
      font-size: 1rem;
    }
  }
</style>