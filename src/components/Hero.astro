<section id="inicio" class="hero" aria-label="Presentación principal">
  <div class="hero-grid fade-in">

    <!-- COLUMNA IZQUIERDA -->
    <div class="hero-text">
      <h1 class="hero-title slide-up">
        Hola, soy <span>Karin Santamaria</span>
      </h1>

<p class="hero-description slide-up delay-1">
  Desarrollador Full Stack en Perú con experiencia en el desarrollo de aplicaciones web modernas.
  Especializado en <strong>Laravel, Vue, Astro, Node.js y Bootstrap</strong>,
  enfocado en crear soluciones escalables, eficientes y orientadas al negocio
  para empresas y emprendimientos digitales.
</p>


      <div class="hero-buttons slide-up delay-2">
        <a href="#proyectos" class="btn-primary">Ver proyectos</a>
        <a href="#contacto" class="btn-secondary">Contáctame</a>
      </div>
    </div>

    <!-- COLUMNA DERECHA -->
    <div class="hero-image">
      <div class="profile-container float-animation">
        <div class="profile-image">
          <div class="profile-flip">
            <div class="profile-front">
<img
  src="/images/perfil.png"
  width="260"
  height="260"
  alt="Karin Santamaria, desarrollador full stack"
/>
            </div>
            <div class="profile-back">
<img
  src="/images/karin.gif"
  alt="Karin Santamaria saludando, desarrollador web"
/>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const profileFlip = document.querySelector('.profile-flip');

    profileFlip?.addEventListener('click', () => {
      profileFlip.classList.toggle('flipped');
    });
  });
</script>


<style>
 /* =========================
   ANIMACIONES
========================= */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20px); }
}

@keyframes pulseRing {
  0% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.1); opacity: 0.3; }
  100% { transform: scale(1); opacity: 0.6; }
}

/* =========================
   UTILIDADES
========================= */
.fade-in { animation: fadeIn 1s ease-out; }

.slide-up { animation: slideUp 0.8s ease-out; }

.delay-1 { animation-delay: 0.2s; opacity: 0; animation-fill-mode: forwards; }
.delay-2 { animation-delay: 0.4s; opacity: 0; animation-fill-mode: forwards; }

.float-animation {
  animation: float 3s ease-in-out infinite;
}

/* =========================
   HERO
========================= */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 2rem;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1.4fr 1fr;
  gap: 4rem;
  max-width: 1200px;
  margin: auto;
  align-items: center;
}

/* =========================
   TEXTO
========================= */
.hero-text {
  display: flex;
  flex-direction: column;
}

.hero-title {
  font-size: 4rem;
  font-weight: 800;
  line-height: 1.1;
  color: #1e293b;
}

.hero-title span {
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hero-description {
  margin-top: 1.5rem;
  font-size: 1.3rem;
  line-height: 1.8;
  color: #475569;
  text-align: justify;
}

.hero-buttons {
  margin-top: 2.5rem;
  display: flex;
  gap: 1rem;
}

/* =========================
   BOTONES
========================= */
.btn-primary,
.btn-secondary {
  padding: 0.9rem 2.2rem;
  border-radius: 50px;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-primary:hover {
  transform: translateY(-3px);
}

.btn-secondary {
  border: 2px solid #667eea;
  color: #667eea;
  background: transparent;
}

.btn-secondary:hover {
  background: #667eea;
  color: white;
}

/* =========================
   IMAGEN / FLIP
========================= */
.hero-image {
  display: flex;
  justify-content: center;
}

.profile-container {
  position: relative;
  width: 260px;
  height: 260px;
}

.profile-container::before {
  content: '';
  position: absolute;
  inset: -15px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  opacity: 0.6;
  animation: pulseRing 2s ease-in-out infinite;
  z-index: -1;
}

.profile-image {
  width: 260px;
  height: 260px;
  perspective: 1000px;
  cursor: pointer;
}

.profile-flip {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.4, 0.2, 0.2, 1);
}

.profile-flip.flipped {
  transform: rotateY(180deg);
}

.profile-front,
.profile-back {
  position: absolute;
  inset: 0;
  backface-visibility: hidden;
  border-radius: 50%;
  overflow: hidden;
  border: 5px solid white;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.profile-back {
  transform: rotateY(180deg);
}

.profile-front img,
.profile-back img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.profile-image:hover .profile-flip:not(.flipped) {
  transform: scale(1.05);
}

/* =========================
   DARK MODE
========================= */
body.dark-mode .hero-title {
  color: #f8fafc;
}

body.dark-mode .hero-description {
  color: rgba(255,255,255,0.8);
}

body.dark-mode .profile-front,
body.dark-mode .profile-back {
  border-color: #1e293b;
}

/* =========================
   RESPONSIVE (CLAVE)
========================= */
@media (max-width: 900px) {
  .hero-grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  /* Reordenamos bloques principales */
  .hero-text {
    display: flex;
    flex-direction: column;
    order: 1;
  }

  .hero-image {
    order: 2;
    margin: 2rem 0;
  }

  /* Reordenamos contenido interno */
  .hero-title {
    order: 1;
    font-size: 2.8rem; /* un poquito más grande */
  }

  .hero-description {
    order: 3;
    text-align: justify;
    font-size: 1.15rem;
  }

  .hero-buttons {
    order: 4;
    justify-content: center;
    flex-wrap: wrap;
  }

  .profile-container,
  .profile-image {
    width: 200px;
    height: 200px;
  }
}
</style>